{
    "env": {
        "mocha": true,
        "node": true
    },
    "extends": "airbnb-base",
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-restricted-properties": "off",
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ],
        "no-await-in-loop": "off",
        "no-restricted-syntax": "off"
    }
}
